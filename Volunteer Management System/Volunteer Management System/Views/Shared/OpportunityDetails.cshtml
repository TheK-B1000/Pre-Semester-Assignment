@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/AdminTemplate.css">
    <title>Volunteer Management System - Opportunity Details</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <header class="mb-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3 d-flex justify-content-center">
                        <a class="navbar-brand" href="#" style="padding-left: 50px;">Volunteer Management System</a>
                    </div>
                    <div class="col-md-9">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 black-bg sidebar">
                <div class="sidebar-sticky">
                    <!-- Profile Section -->
                    <div class="text-center mb-4">
                        <div style="background-color: #ddd; border-radius: 50%; width: 100px; height: 100px; margin: 0 auto;"></div>
                        <h4 class="mt-3 white-text">Username</h4>
                    </div>

                    <!-- Search Bar -->
                    <form class="form-inline mt-2 mb-4 d-flex justify-content-center">
                        <input class="form-control w-75" type="text" placeholder="Search" aria-label="Search">
                        <button class="btn btn-dark ml-2" type="submit">Search</button>
                    </form>

                    <!-- Navigation Links -->
                    <ul class="nav flex-column mt-4 pl-3">
                        <li class="nav-item mb-2">
                            <a class="nav-link d-flex align-items-center white-text" asp-controller="Home" asp-action="Dashboard">
                                <i class="fas fa-users mr-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link d-flex align-items-center white-text" asp-controller="Home" asp-action="ManageVolunteers">
                                <i class="fas fa-users mr-2"></i> Manage Volunteers
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link d-flex align-items-center white-text" asp-controller="Home" asp-action="ManageOpportunities">
                                <i class="fas fa-briefcase mr-2"></i> Manage Opportunities
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

             <!-- Main Content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h1 class="h2">Edit Opportunity</h1>
            
                <!-- Opportunity Details Form -->
                <div class="my-3 p-3 bg-white rounded shadow-sm">
                <form asp-controller="Opportunity" asp-action="UpdateOpportunity" method="post">
                    <div class="form-group">
                        <label for="FirstName">First Name</label>
                        <input type="text" class="form-control" id="OpportunityID" name="Opportunity ID" value="opportunity.OpportunityID">
                    </div>
                    
                    <div class="form-group">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="opportunity.Name">
                    </div>
                    
                    <div class="form-group">
                        <label for="Username">Username</label>
                        <input type="text" class="form-control" id="Username" name="Description" value="opportunity.Description">
                    </div>
                    
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Center" name="Center" value="opportunity.Center">
                    </div>
                    
                    <div class="form-group">
                        <label for="Centers">Preferred Centers</label>
                        <input type="text" class="form-control" id="Date" name="Date" value="opportunity.Date">
                    </div>
                    
                    <div class="form-group">
                        <label for="SkillsOrInterests">Skills/Interests</label>
                        <input type="text" class="form-control" id="Duration" name="Duration" value="opportunity.Duration">
                    </div>
                    
                    <div class="form-group">
                        <label for="AvailabilityTimes">Availability Times</label>
                        <input type="text" class="form-control" id="AvailabilityTimes" name="AvailabilityTimes" value="opportunity.AvailabilityTimes">
                    </div>
                    
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <input type="text" class="form-control" id="Address" name="Address" value="volunteer.Address">
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
                </div>
            </main>
           

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqFjcJ6pajs/rfdfs3SO+kD5tr5Szkbe5FEnqF1eCZl3I" crossorigin="anonymous"></script>
    <script src="~/js/AdminTemplate.js"></script>
    <script src="~/js/CardWidget.js"></script>
    <script src="~/js/ControlSidebar.js"></script>
    <script src="~/js/SidebarSearch.js"></script>
    <script src="~/js/Dropdown.js"></script>
    <script src="~/js/Layout.js"></script>
    <script src="~/js/PushMenu.js"></script>
</body>
</html>

