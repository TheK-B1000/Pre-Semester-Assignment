@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/AdminTemplate.css">
    <title>Volunteer Management System - Add Opportunity</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <header class="mb-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Volunteer Management System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <h1 class="text-center">Add Opportunity</h1>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 bg-light sidebar">
                <div class="sidebar-sticky">
                    <div class="mb-4">
                        <img class="rounded-circle" />
                        <h2>Profile pic and Username go here</h2>
                    </div>

                    <form class="form-inline mt-2 mt-md-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>

                    <ul class="nav flex-column mt-4">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ManageVolunteers">Manage Volunteers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ManageOpportunities">Manage Opportunities</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Add Opportunity Form -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div id="errorAlert" class="alert alert-danger" role="alert" style="display: none;">
                    <span id="errorMessage">Error: Invalid input detected!</span>
                </div>
                <form asp-controller="OpportunityController" asp-action="AddOpportunity" method="post">
                    <div class="form-group">
                        <label for="OpporunityID">ID</label>
                        <input type="text" class="form-control" id="OpporunityID" name="OpporunityID" required>
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <input type="text" class="form-control" id="Description" name="Description" required>
                    </div>
                    <div class="form-group">
                        <label for="Center">Center</label>
                        <input type="text" class="form-control" id="Center" name="Center" required>
                    </div>
                    <div class="form-group">
                        <label for="Date">Date</label>
                        <input type="text" class="form-control" id="Date" name="Date" required>
                    </div>
                    <div class="form-group">
                        <label for="Duration">Duration</label>
                        <textarea class="form-control" id="Duration" name="Duration" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="MaximumVolunteers">Maximum Volunteers</label>
                        <textarea class="form-control" id="MaximumVolunteers" name="MaximumVolunteers" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="CurrentVolunteers">Current Volunteers</label>
                        <textarea class="form-control" id="CurrentVolunteers" name="CurrentVolunteers" required></textarea>
                    </div>             

                    <div class="form-group">
                        <label for="ApprovalStatus">Approval Status</label>
                        <select class="form-control" id="ApprovalStatus" name="ApprovalStatus">
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                    </div>

                    <a asp-controller="Opportunity" asp-action="OpportunityAdded" method="post" class="btn btn-secondary" role="button">Add Opportunity</a>
                    <a asp-controller="Home" asp-action="ManageOpportunities" class="btn btn-secondary" role="button">Cancel</a>
                </form>
            </main>
        </div>
    </div>


            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqFjcJ6pajs/rfdfs3SO+kD5tr5Szkbe5FEnqF1eCZl3I" crossorigin="anonymous"></script>
            <script src="~/js/AdminTemplate.js"></script>
            <script src="~/js/CardWidget.js"></script>
            <script src="~/js/ControlSidebar.js"></script>
            <script src="~/js/SidebarSearch.js"></script>
            <script src="~/js/Dropdown.js"></script>
            <script src="~/js/Layout.js"></script>
            <script src="~/js/PushMenu.js"></script>
</body>
</html>

