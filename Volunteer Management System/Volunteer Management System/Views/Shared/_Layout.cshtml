<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" href="~/css/AdminTemplate.css">
    <title>Volunteer Management System</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    @RenderSection("Css", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse bg-info">
        <a class="navbar-brand text-white" href="#">VOLUNTEER MANAGEMENT SYSTEM</a>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col col-md-3">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/AdminTemplate.js"></script>
    <script src="~/js/CardWidget.js"></script>
    <script src="~/js/ControlSidebar.js"></script>
    <script src="~/js/SidebarSearch.js"></script>
    <script src="~/js/Dropdown.js"></script>
    <script src="~/js/Layout.js"></script>
    <script src="~/js/PushMenu.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
