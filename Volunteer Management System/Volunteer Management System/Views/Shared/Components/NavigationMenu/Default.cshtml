@model IEnumerable<string>

<div class="row">
    <a class="btn btn-outline-dark btn-block m-2"
       asp-action="List"
       asp-controller="Person"
       asp-route-category="">
        Home
    </a>
</div>

@foreach (string role in Model)
{
    <div class="row">
        <a class="btn btn-block m-2
            @(role == ViewBag.SelectedTitle ? "btn-primary": "btn-outline-dark")"
            asp-action="List"
            asp-controller="Person"
            asp-route-category="@role"
            asp-route-page="1">
            @role
        </a>
    </div>
}
