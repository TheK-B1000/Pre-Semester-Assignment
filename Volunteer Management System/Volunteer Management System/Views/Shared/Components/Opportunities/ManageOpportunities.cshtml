@{
    ViewData["Title"] = "Manage Opportunities";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light sidebar">
            <div class="sidebar-sticky">
            </div>
        </div>

        <!-- Main Content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <h1 class="h2">Manage Opportunities</h1>

            <!-- Opportunities Section -->
            <div class="my-3 p-3 bg-white rounded shadow-sm">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <h6 class="mb-0">Current Opportunities</h6>
                    <a href="#" class="btn btn-primary">Add New Opportunity</a>
                </div>

                <!-- Search bar and filter dropdown -->
                <div class="d-flex justify-content-between align-items-center w-100 mt-3">
                    <input type="text" class="form-control" placeholder="Search opportunities">
                    <select class="form-control ml-3">
                        <option selected>Filter...</option>
                        <option>Most Recent (60 days)</option>
                        <option>By Center</option>
                    </select>
                </div>

                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">
                                <a href="#">Opportunity Name</a> <!-- TODO add sorting functionality -->
                            </th>
                            <th scope="col">
                                <a href="#">Center</a> <!-- TODO add sorting functionality -->
                            </th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Opportunities list here -->
                        <!-- Example: -->
                        <tr>
                            <td>Food Drive</td>
                            <td>Main Center</td>
                            <td>
                                <a href="#" class="btn btn-primary">Edit</a>
                                <a href="#" class="btn btn-success">View Matches</a>
                                <a href="#" class="btn btn-danger">Delete</a> <!-- TODO add delete functionality -->
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
