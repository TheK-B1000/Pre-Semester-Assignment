@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/AdminTemplate.css">
    <title>Volunteer Management System - SignUp</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100">
    <header class="mb-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Volunteer Management System</a>
        </nav>
        <h1 class="text-center">Sign Up</h1>
    </header>

    <main class="container mb-5">
        <!-- SignUp Section -->
        <section class="mb-5">
            <div class="text-center mb-4">
                Already have an account? <a href="/Home/Index">Log in</a>
            </div>

            <form action="your_signup_action_url_here" method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
            <div class="text-center mt-4">          
        </section>
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <p class="text-center">&copy; 2023 Volunteer Management System</p>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqFjcJ6pajs/rfdfs3SO+kD5tr5Szkbe5FEnqF1eCZl3I" crossorigin="anonymous"></script>
    <script src="~/js/AdminTemplate.js"></script>
    <script src="~/js/CardWidget.js"></script>
    <script src="~/js/ControlSidebar.js"></script>
    <script src="~/js/SidebarSearch.js"></script>
    <script src="~/js/Dropdown.js"></script>
    <script src="~/js/Layout.js"></script>
    <script src="~/js/PushMenu.js"></script>
</body>
</html>
