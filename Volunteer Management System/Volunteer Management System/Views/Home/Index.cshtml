@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/AdminTemplate.css">
    <title>Volunteer Management System - Home</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    </style>
</head>
<body class="d-flex flex-column h-100">
    <header class="mb-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Volunteer Management System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <h1 class="text-center">Welcome to the Volunteer Management System</h1>
    </header>

    <main class="container mb-5">
        <!-- Login Section -->
        <section class="mb-5">
            <h2>Log In</h2>
            <form action="your_action_url_here" method="post">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <a asp-controller="Account" asp-action="ResetPassword" class="btn btn-link">Reset Password</a>
            </form>
            <p class="mt-3">New here? <a asp-controller="Account" asp-action="SignUp" class="btn btn-link">Sign up</a></p>
            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-link">TESTING - Dashboard</a>
        </section>

        <!-- Upcoming Opportunities -->
        <h2>Upcoming Opportunities</h2>
        <div class="opportunity-card card p-3 mb-3">
            <h3>Opportunity 1</h3>
            <p>Description of Opportunity 1</p>
            <p>Date: [Date]</p>
            <p>Duration: [Duration]</p>
            <p>Center: [Center]</p>
            <!-- Add more opportunities here -->
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <p class="text-center">&copy; 2023 Volunteer Management System</p>
        </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqFjcJ6pajs/rfdfs3SO+kD5tr5Szkbe5FEnqF1eCZl3I" crossorigin="anonymous"></script>
    <script src="~/js/AdminTemplate.js"></script>
    <script src="~/js/CardWidget.js"></script>
    <script src="~/js/ControlSidebar.js"></script>
    <script src="~/js/SidebarSearch.js"></script>
    <script src="~/js/Dropdown.js"></script>
    <script src="~/js/Layout.js"></script>
    <script src="~/js/PushMenu.js"></script>
</body>
</html>
